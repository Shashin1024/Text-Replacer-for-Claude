// ========== manifest.json ==========
{
  "manifest_version": 3,
  "name": "Claude Prompt Expander",
  "version": "1.0",
  "description": "Replace short abbreviations with long prompts in Claude.ai",
  "permissions": ["storage"],
  "content_scripts": [
    {
      "matches": ["https://claude.ai/*"],
      "js": ["content.js"],
      "run_at": "document_end"
    }
  ],
  "action": {
    "default_popup": "popup.html"
  }
}
